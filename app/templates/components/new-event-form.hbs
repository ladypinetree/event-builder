<div class="jumbotron jumbotron-container new-event">
<form class="form-group" {{action 'save' on='submit'}}>
{{input
id="eventTitle"
placeholder="event title"
value=event.eventTitle
required="required"
maxlength="100"}}

{{input
id="eventType"
placeholder="event type"
value=event.eventType
required="required"
maxlength="100"}}

{{input type="date"
id="eventDate"
placeholder="event date"
value=event.eventDate
required="required"
data-provide="datepicker"}}

<button type="submit" class="btn btn-primary">
  Save
</button>

<button class="btn btn-default" {{action "cancel"}}>
  Cancel
</button>
</form>
</div>
